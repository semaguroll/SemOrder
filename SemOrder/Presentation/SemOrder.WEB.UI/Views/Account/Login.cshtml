		<!-- begin:: Page -->
		<div class="kt-grid kt-grid--ver kt-grid--root">
			<div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v3 kt-login--signin" id="kt_login">
				<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" style="background-color: white">
					<div class="kt-grid__item kt-grid__item--fluid kt-login__wrapper">
						<div class="kt-login__container">
							<div class="kt-login__logo">
								<a href="#">
									<img src="semorder/assets/media/logos/logo_lemon.jpg">
								</a>
							</div>
							<div class="kt-login__signin">
								<div class="kt-login__head">
									<h3 class="kt-login__title">Giriş Yap</h3>
								</div>
								<form class="kt-form" asp-controller="Account" asp-action="Login" method="post" >
									<div class="input-group">
										 <input asp-for="Email" class="form-control" type="text" placeholder="E-posta" />
									</div>
									<div class="input-group">
										<input asp-for="Password" class="form-control" type="password" placeholder="Parola"/>
									</div>
									<div class="row kt-login__extra">
										<div class="col">
											<label class="kt-checkbox">
												<input type="checkbox" name="remember"> Beni hatırla
												<span></span>
											</label>
										</div>
										<div class="col kt-align-right">
											<a href="javascript:;" id="kt_login_forgot" class="kt-login__link">Şifreni mi unuttun ?</a>
										</div>
									</div>
									<div class="kt-login__actions">
										<button id="kt_login_signin_submit" type="submit" class="btn btn-outline btn-brand btn-elevate kt-login__btn-primary">Giriş Yap</button>
									</div>
								</form>
							</div>
