							<div class="kt-login__forgot">
								<div class="kt-login__head">
									<h3 class="kt-login__title">Şifreni mi unuttun ?</h3>
								</div>
								<form asp-controller="Account" asp-action="Login" class="kt-form"  method="post">
									<div class="input-group">
										<input asp-for="Email" class="form-control" type="text" placeholder="E-posta" name="email" id="kt_email" autocomplete="off">
									</div>
									<div class="kt-login__actions">
										<button type="submit" id="kt_login_forgot_submit" class="btn btn-brand btn-elevate kt-login__btn-primary">Gönder</button>&nbsp;&nbsp;
										<button id="kt_login_forgot_cancel" class="btn btn-light btn-elevate kt-login__btn-secondary">Geri Dön</button>
									</div>
								</form>
							</div>
							<div class="kt-login__account">
								<span class="kt-login__account-msg">
									Hesabın yok mu ?
								</span>
								&nbsp;&nbsp;
								<a  asp-controller="User" asp-action="SignUp" asp-area="Admin" class="kt-login__account-link">Hesap oluştur !</a>								
							</div>
						</div>
					</div>       
				</div>
			</div>
		</div>

